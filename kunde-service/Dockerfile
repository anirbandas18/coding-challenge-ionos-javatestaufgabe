FROM adoptopenjdk:11-jre-hotspot-focal
MAINTAINER Anirban Das <anirbandas18@live.com>
RUN mkdir ~p -p /opt/ionos-javatestaufgabe-s3export/s3export-kunde-service
COPY target/*.jar /opt/ionos-javatestaufgabe-s3export/s3export-kunde-service/kunde-app.jar
EXPOSE 10001
CMD ["java", "-jar",
"-DSPRING_PROFILES_ACTIVE=${SPRING_PROFILES_ACTIVE}",
"-DLOGBACK_LOGGING_LEVEL=${LOGBACK_LOGGING_LEVEL}",
"-DSPRING_CLOUD_CONFIG_ENABLED=${SPRING_CLOUD_CONFIG_ENABLED}",
"-DLOGSTASH_HOST=${LOGSTASH_HOST}",
"-DLOGSTASH_PORT=${LOGSTASH_PORT}",
"-DSPRING_CLOUD_CONFIG_HOST=${SPRING_CLOUD_CONFIG_HOST}",
"-DSPRING_CLOUD_CONFIG_PORT=${SPRING_CLOUD_CONFIG_PORT}",
"-DKUNDE_LOGGING_LEVEL=${KUNDE_LOGGING_LEVEL}",
"-DKUNDE_SHOW_SQL=${KUNDE_SHOW_SQL}",
"-DKUNDE_SQL_COMMENTS=${KUNDE_SQL_COMMENTS}",
"-DKUNDE_FORMAT_SQL=${KUNDE_FORMAT_SQL}",
"-DKUNDE_DATABASE_HOST=${KUNDE_DATABASE_HOST}",
"-DKUNDE_DATABASE_PORT=${KUNDE_DATABASE_PORT}",
"-DKUNDE_EUERKA_HOST=${KUNDE_EUERKA_HOST}",
"-DKUNDE_EUREKA_PORT=${KUNDE_EUREKA_PORT}",
"-DKUNDE_ZIPKIN_HOST=${KUNDE_ZIPKIN_HOST}",
"-DKUNDE_ZIPKIN_PORT=${KUNDE_ZIPKIN_PORT}",
"/opt/ionos-javatestaufgabe-s3export/s3export-kunde-service/kunde-app.jar"]